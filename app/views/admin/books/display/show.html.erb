<% admin_nav_crumbs "Books Display" %>

<div class="container mt-4">
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-2">
        <%= link_to admin_book_path(book), class: 'b-admin-books-display-cover-link' do %>
          <%= render "admin/books/standard_cover", book: book %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>

