<% content_for :title,
  safe_join([admin_nav_books_link, admin_nav_book_link(@book)], " > ")
  %>

<div class="container mt-4">
  <div class="btn-group" role="group">
    <%= admin_buttonly_link_to "edit", edit_admin_book_path(@book) %>
    <%= display_link_to "show", book_display_path(@book) %>
    <%= button_to "generate info", admin_book_ai_book_info_path(@book), method: :put, class: "btn btn-warning" %>
    <%= button_to "delete", @book, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
</div>

<div id="<%= dom_id @book %>" class="container mt-4">
  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Title:</div>
    <div class="col-md-9"><%= @book.title %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Original Title:</div>
    <div class="col-md-9"><%= @book.original_title %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Author:</div>
    <div class="col-md-9"><%= admin_link_to @book.author.fullname, admin_author_path(@book.author) %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Year Published:</div>
    <div class="col-md-9"><%= @book.year_published %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Goodreads Rating:</div>
    <div class="col-md-9"><%= @book.goodreads_rating %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Goodreads Popularity:</div>
    <div class="col-md-9"><%= @book.goodreads_popularity %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Popularity:</div>
    <div class="col-md-9"><%= @book.popularity %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Goodreads URL:</div>
    <div class="col-md-9"><%= external_link_to 'URL', @book.goodreads_url if @book.goodreads_url.present? %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Summary:</div>
    <div class="col-md-9"><%= @book.summary %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Tags:</div>
    <div class="col-md-9">
      <% @book.tags.each do |tag| %>
        <span class="badge bg-secondary mr-1"><%= tag.name %></span>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Created At:</div>
    <div class="col-md-9"><%= admin_timestamp(@book.created_at) %></div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3 font-weight-bold">Updated At:</div>
    <div class="col-md-9"><%= admin_timestamp(@book.updated_at) %></div>
  </div>
</div>