<% content_for :title,
  safe_join([authors_link, author_link(@author), "Books"], " > ")
  %>

<%= link_to "New book", new_admin_author_book_path(@author) %>

<div>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
  <table id="admin_books" class="table">
    <thead>
      <th>ID</th>
      <th>TITLE</th>
      <th>YEAR</th>
      <th>RATING</th>
      <th>POPULARITY</th>
      <th>CREATED</th>
      <th>UPDATED</th>
    </thead>
    <% @admin_books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.id, book, target: "_blank" %>
        </td>
        <td>
          <%= book.title %>
          <%= "(#{book.original_title})" if book.original_title.present? %>
        </td>
        <td>
          <%= book.year_published %>
        </td>
        <td>
          <%= book.goodreads_rating %>
        </td>
        <td>
          <%= book.popularity %>
        </td>
        <td>
          <%= admin_timestamp(book.created_at) %>
        </td>
        <td>
          <%= admin_timestamp(book.updated_at) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

