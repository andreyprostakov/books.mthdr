<div class="container mt-4">
  <%= form_tag admin_authors_search_path, method: :post do %>
    <div class="row">
      <div class="col-2">
        <%= text_field_tag :key, params[:key], class: "form-control", placeholder: "name" %>
      </div>
      <div class="col-2">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
