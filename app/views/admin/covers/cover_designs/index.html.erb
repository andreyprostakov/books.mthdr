<% admin_nav_crumbs "Cover Designs" %>

<div class="container mt-4">
  <%= admin_buttonly_link_to "New Design", new_admin_covers_cover_design_path %>
</div>

<div class="container mt-4">
  <div class="row">
    <% @designs.each do |design| %>
      <div class="col-md-2">
        <%= link_to edit_admin_covers_cover_design_path(design), class: "b-admin-cover-designs-index-link" do %>
          <%= render "admin/books/standard_cover_base",
                design: design,
                title: design.name,
                author_name: "John Doe" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

